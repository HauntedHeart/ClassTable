<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content">
  
  <TextView 
       android:layout_width="wrap_content" 
       android:layout_height="wrap_content" 
       android:id="@+id/tvName" 
       android:layout_y="20dip" 
       android:layout_x="50dip"
       android:text="账号:" >
  </TextView>
   <TextView 
       android:layout_width="wrap_content" 
       android:layout_height="wrap_content" 
       android:id="@+id/tvPassword" 
       android:layout_y="80dip" 
       android:layout_x="50dip"
       android:text="密码:" >
  </TextView>
  
  <EditText
       android:layout_width="200dp" 
       android:layout_height="wrap_content" 
       android:id="@+id/userName" 
       android:layout_y="10dip" 
       android:layout_x="90dip">
       </EditText>
   <EditText
       android:layout_width="200dp" 
       android:layout_height="wrap_content" 
       android:id="@+id/pssword" 
       android:password="true" 
       android:layout_y="70dip" 
       android:layout_x="90dip">
   </EditText>
   <CheckBox
        android:id="@+id/savePwd"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_y="110dip" 
        android:layout_x="100dip"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:paddingLeft="25dip"
        android:text="记住密码" >
    </CheckBox>
    
     <CheckBox
        android:id="@+id/auto"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_y="110dip" 
        android:layout_x="180dip"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:paddingLeft="25dip"
        android:text="自动登录" >
    </CheckBox>
   <Button
        android:id="@+id/login"
        android:text="登陆"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_y="150dip" 
        android:layout_x="100dip">     
     </Button> 
     <Button
          android:id="@+id/regsiter"
          android:text="注册"
          android:layout_width="80dp"
          android:layout_height="wrap_content"
          android:layout_y="150dip" 
          android:layout_x="180dip">     
     </Button>
</AbsoluteLayout>